<header class="row p-3 border-bottom border-5">
  <h1 class="col-10">
    <a href="/">
      Med Planner
    </a>
  </h1>
  <nav class="col-2">
    {{#if loggedIn}}
      <a class="btn" href="/dashboard">
        Dashboard
      </a>
    {{else}}
      <a class="btn" href="/">
        Sign In
      </a>
      <a class="btn" href="/provider">
        Caregiver
      </a>
    {{/if}}
  </nav>
</header>


<div>
<h2 class="p-3 text-center">Sign up with us today!</h2>

<form class="row round p-3 g-3">
  <div class="col-md-4">
    <input type="text" class="form-control round" id="validationDefault01" value="" placeholder="First Name" required>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control round" id="validationDefault02" value="" placeholder="Last Name" required>
  </div>
  <div class="col-md-4">
    <div class="input-group">
      <input type="text" class="form-control round" id="validationDefaultEmail" value="" placeholder="Email Address" required>
    </div>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control round" id="validationDefault03" value="" placeholder="City" required>
  </div>
  <div class="col-md-4">
     <input type="text" class="form-control round" id="validationDefault04" value="" placeholder="State" required>
  </div>
  <div class="col-md-4">
    <input type="text" class="form-control round" id="validationDefault05" placeholder="Zip" required>
  </div>
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Agree to terms and conditions
      </label>
    </div>
  </div>
  <div class="col-12">
    <button class="btn" type="submit">Sign Up</button>
  </div>
</form>

</div>