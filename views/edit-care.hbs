<link rel="stylesheet" href="/css/secondary.css">

<header class="row p-3 border-bottom border-info border-5">
  <h1 class="col-10">
    <a href="/">
      Med Planner
    </a>
  </h1>
  <nav class="col-2">
      <a class="btn" href="/dashcare">
        Home
      </a>
      <a class="btn logout" href="/logout">
        Logout
      </a>
  </nav>
</header>
<section>
  <h1 class="p-3 text-center">Edit your information</h1>
</section>

<section>
<form class="row round p-3 g-3 text-center edit-care">
    <div class="input-group">
  <div class="col-md-3">
  <span class="fs-3">First</span><input type="text" class="form-control round text-center fs-5" id="first_name" value="{{caregiver.first_name}}" required>
  </div>
  <div class="col-md-3">
  <span class="fs-3">Last</span><input type="text" class="form-control round text-center fs-5" id="last_name" value="{{caregiver.last_name}}" required>
  </div>
  <div class="col-md-3">
  <span class="fs-3">Phone</span><input type="text" class="form-control round text-center fs-5" id="phone" value="{{caregiver.phone}}" required>
  </div>
  <div class="col-md-3">
  <span class="fs-3">Fax</span><input type="text" class="form-control round text-center fs-5" id="fax" value="{{caregiver.fax}}" required>
  </div>
  <div class="col-md-3">
  <span class="fs-3">Specialty</span><input type="text" class="form-control round text-center fs-5" id="specialty" value="{{caregiver.specialty}}" required>
  </div>
  <div class="col-md-6">
  <span class="fs-3">Email</span><input type="text" class="form-control round text-center fs-5" id="email" value="{{caregiver.email}}" required>
  </div>
  <div class="col-md-3">
  <span class="fs-3">Practice</span><input type="text" class="form-control round text-center fs-5" id="practice_name" value="{{caregiver.practice_name}}" required>
  </div>
  <div class="col-md-12">
  <span class="fs-3">Address</span><input type="text" class="form-control round text-center fs-5" id="address" value="{{caregiver.address}}" required>
  </div>
  <div class="col-12">
    <button class="btn" type="submit">Update</button>
    </div>
  </div>
</form>
</section>

<script src="/javascript/edit-patient.js"></script>
<script src="/javascript/logout.js"></script>